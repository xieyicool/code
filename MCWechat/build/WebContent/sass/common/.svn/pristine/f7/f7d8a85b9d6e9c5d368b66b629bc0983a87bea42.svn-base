.imagebox{
    position: fixed;
    background-color:white;
    padding: 8px;
    @include box-shadow(0 0 15px rgba(0,0,0,0.2));
    z-index: $zindex-imagebox;
    left: 50%;
    top: 50%;
    
    .frame{
        overflow-y:auto;
        overflow-x:hidden;
    }
    img{
        display:block;
    }
    a{
        color: $text-color;
        &:hover{
            color: black;
            text-decoration: none;
        }
        *{
            vertical-align: middle;
        }
    }
}